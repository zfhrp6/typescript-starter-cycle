{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": [ "dom", "es6", "es5" ],
    "baseUrl": "./src"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.spec.ts"
  ],
  "compileOnSave": false
}
